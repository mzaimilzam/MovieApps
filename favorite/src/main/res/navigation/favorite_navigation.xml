<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/navigation_movie">

    <fragment
        android:id="@+id/navigation_movie"
        android:name="id.co.zaimilzam.movieapps.favorite.movie.FavoriteMovieFragment"
        android:label="@string/title_home"
        tools:layout="@layout/favorite_movie_fragment" >
        <action
            android:id="@+id/action_navigation_movie_to_navigation_tvshows"
            app:destination="@id/navigation_tvshows" />
    </fragment>

    <fragment
        android:id="@+id/navigation_tvshows"
        android:name="id.co.zaimilzam.movieapps.favorite.tvshows.FavoriteTvShowsFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/favorite_tv_shows_fragment" />

</navigation>