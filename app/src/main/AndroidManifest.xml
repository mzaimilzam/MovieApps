<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.co.zaimilzam.movieapps">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher_apps"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_apps_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieApps">
        <activity android:name=".splash.SplashScreenActivity"
            android:theme="@style/Theme.MovieApps.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".detail.DetailMovieActivity"
            android:theme="@style/Theme.MovieApps.NoActionBar"/>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.MovieApps.NoActionBar">
        </activity>
    </application>

</manifest>